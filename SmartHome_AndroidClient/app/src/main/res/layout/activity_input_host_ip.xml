<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
        android:id="@+id/caServerIPAddress_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"/>

    <Button
        android:id="@+id/hostip_OK_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/caServerIPAddress_editText"
        android:layout_below="@+id/caServerIPAddress_editText"
        android:layout_marginTop="16dp"
        android:onClick="onOKButtonClick"
        android:text="OK"/>
</RelativeLayout>