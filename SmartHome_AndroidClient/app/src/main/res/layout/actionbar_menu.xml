<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="fill"
                android:background="@color/actionbar_gray">

    <ImageView
        android:id="@+id/home_imageView"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_home_white_24dp"/>

    <ImageView
        android:id="@+id/open_navigation_drawer_imageView"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_menu_white_24dp"/>

    <TextView
        android:id="@+id/action_bar_title_textView"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/home_imageView"
        android:layout_marginStart="20sp"
        android:layout_toStartOf="@id/open_navigation_drawer_imageView"
        android:layout_marginEnd="20sp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"/>
</RelativeLayout>